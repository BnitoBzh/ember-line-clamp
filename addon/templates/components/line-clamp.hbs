{{#each _textLines as |line|}}
  {{#if line.lastLine}}
    <span class="lt-line-clamp__line lt-line-clamp__line--last">
      {{unbound line.text}}
      {{~#if line.needsEllipsis~}}
        <span class="lt-line-clamp__ellipsis">{{unbound ellipsis}}
          {{#if _showMoreButton}}
            <a href="#" class="lt-line-clamp__more" onclick={{action "toggleTruncate"}}>{{unbound seeMoreText}}</a>
          {{/if}}
        </span>
      {{~/if~}}
    </span>
  {{else if line.newLine}}
    <br>
  {{else}}
    <span class="lt-line-clamp__line">{{unbound line.text}}</span>
  {{/if}}
{{else if _strippedText}}
  {{_strippedText}}
{{else}}
  <span class="lt-line-clamp__raw-line">{{text}}</span>
{{/each}}

{{#if _showLessButton}}
  {{#unless _truncated}}
    {{#if _expanded}}
      <span><a href="#" class="lt-line-clamp__less" onclick={{action "toggleTruncate"}}>{{unbound seeLessText}}</a></span>
    {{/if}}
  {{/unless}}
{{/if}}